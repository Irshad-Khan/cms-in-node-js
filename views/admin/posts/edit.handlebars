<h1>Edit Post</h1>
<hr>
<form method="post" action="/admin/posts/edit/{{post._id}}?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input value="{{post.title}}" type="text" name="title" class="form-control" id="title">
        {{#if errors}}
        <p class="text-danger">{{showError errors "title"}}</p>
        {{/if}}
    </div>
    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control" id="file">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>

    <div class="form-group form-check ml-4">
        <input {{#if post.allowComments}} checked="checked" {{/if}} type="checkbox" name="allowComments" class="form-check-input" id="allowComments">
        <label class="form-check-label" for="allowComments">Allow Comments</label>
        {{#if errors}}
        <p class="text-danger">{{showError errors "allowComments"}}</p>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" 
            rows="10" 
            name="body" 
            class="form-control" 
            id="body">{{post.body}}</textarea>
        {{#if errors}}
        <p class="text-danger">{{showError errors "body"}}</p>
        {{/if}}

    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
</form>