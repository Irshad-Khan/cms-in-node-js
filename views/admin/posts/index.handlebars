<h1>Posts</h1>
{{> alerts/flash-messages}}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Allow Comments</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <th scope="row">{{formatIndex @index }}</th>
                <th><img width="40" height="40" src="/uploads/{{file}}" alt="Post Image"></th>
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{generateDate date "MMMM Do, YYYY"}}</td>
                <td>
                    <div class="row">
                        <div class="col-sm-3">
                            <a class="btn btn-info" href="/admin/posts/edit/{{_id}}">Edit</a>
                        </div>
                        <div class="col-sm-3">
                            <form action="/admin/posts/delete/{{_id}}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>