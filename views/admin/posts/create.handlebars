<h1>Create Post</h1>
<hr>
<form method="post" action="/admin/posts/create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title"
            placeholder="Enter title">
        {{#if errors}}
            <p class="text-danger">{{showError errors "title"}}</p>
        {{/if}}
    </div>
    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control" id="file">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-group form-check ml-4">
        <input type="checkbox" name="allowComments" class="form-check-input" id="allowComments">
        <label class="form-check-label" for="allowComments">Allow Comments</label>
        {{#if errors}}
        <p class="text-danger">{{showError errors "allowComments"}}</p>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" 
            rows="10" 
            name="body" 
            class="form-control" 
            id="body" placeholder="Enter description"></textarea>
        {{#if errors}}
        <p class="text-danger">{{showError errors "body"}}</p>
        {{/if}}

    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
</form>